
<p id="notice"><%= notice %></p>

<h1>Liste des Emails</h1>

<table>
  <thead>
    <tr>
      <th>Object</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
    <td>
      <%= link_to email.object, email, :remote => true, class:"object" %>
    </td>
    <td><%= render partial: "post" %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'destroy_email' %></td>
  </tr>
  <% end %>
</tbody>
</table>

<br>

<%= link_to 'New Email', new_email_path %>